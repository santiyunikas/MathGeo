                        android:text="@string/abgh"
                        android:id="@+id/btn_abgh" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/CardViewCustom"
            android:id="@+id/cont_diagonal_ruang">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">
                <TextView
                    style="@style/NormalTextBold"
                    android:text="@string/diagonal_ruang"
                    />
                <TextView
                    style="@style/TextViewBlack"
                    android:text="@string/ket_diagonal_ruang"
                    android:textAlignment="textStart"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        style="@style/BtnBeforeClick2"
                        android:text="@string/df"
                        android:id="@+id/btn_df"
                        />
                    <Button
                        style="@style/BtnBeforeClick2"
                        android:text="@string/ag"
                        android:id="@+id/btn_ag"
                        />
                    <Button
                        style="@style/BtnBeforeClick2"
                        android:text="@string/ec"
                        android:id="@+id/btn_ec"
                        />
                    <Button
                        style="@style/BtnBeforeClick2"
                        android:text="@string/bh"
                        android:id="@+id/btn_bh" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/CardViewCustom"
            android:id="@+id/cont_diagonal_sisi">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical"
                tools:ignore="TooManyViews">
                <TextView
                    style="@style/NormalTextBold"
                    android:text="@string/diagonal_sisi_diagonal_bidang"
                    />
                <TextView
                    style="@style/TextViewBlack"
                    android:text="@string/ket_diagonal_sisi"
                    android:textAlignment="textStart"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        style="@style/BtnBeforeClick2"
                        android:text="@string/af"
                        android:id="@+id/btn_af"
                        />
                    <Button
                        style="@style/BtnBeforeClick2"
                        android:text="@string/be"
                        android:id="@+id/btn_be"
                        />
                    <Button
                        style="@style/BtnBeforeClick2"
                        android:text="@string/bg"
                        android:id="@+id/btn_bg"
                        />
                    <Button
                        style="@style/BtnBeforeClick2"
                        android:text="@string/cf"
                        android:id="@+id/btn_cf" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        style="@style/BtnBeforeClick2"
                        android:text="@string/ah"
                        android:id="@+id/btn_ah" />
                    <Button
                        style="@style/BtnBeforeClick2"
                        android:text="@string/de"
                        android:id="@+id/btn_de" />
                    <Button
                        style="@style/BtnBeforeClick2"
                        android:text="@string/eg"
                        android:id="@+id/btn_eg" />
                    <Button
                        style="@style/BtnBeforeClick2"
                        android:text="@string/fh"
                        android:id="@+id/btn_fh" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        style="@style/BtnBeforeClick2"
                        android:text="@string/ac"
                        android:id="@+id/btn_ac" />
                    <Button
                        style="@style/BtnBeforeClick2"
                        android:text="@string/bd"
                        android:id="@+id/btn_bd" />
                    <Button
                        style="@style/BtnBeforeClick2"
                        android:text="@string/dg"
                        android:id="@+id/btn_dg" />
                    <Button
                        style="@style/BtnBeforeClick2"
                        android:text="@string/ch"
                        android:id="@+id/btn_ch" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
