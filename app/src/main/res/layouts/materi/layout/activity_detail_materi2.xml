                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        style="@style/BtnBeforeClick2"
                        android:text="@string/a"
                        android:id="@+id/btn_a"
                        />
                    <Button
                        style="@style/BtnBeforeClick2"
                        android:text="@string/b"
                        android:id="@+id/btn_b"
                        />
                    <Button
                        style="@style/BtnBeforeClick2"
                        android:text="@string/c"
                        android:id="@+id/btn_c"
                        />
                    <Button
                        style="@style/BtnBeforeClick2"
                        android:text="@string/d"
                        android:id="@+id/btn_d" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        style="@style/BtnBeforeClick2"
                        android:text="@string/e"
                        android:id="@+id/btn_e" />
                    <Button
                        style="@style/BtnBeforeClick2"
                        android:text="@string/f"
                        android:id="@+id/btn_f" />
                    <Button
                        style="@style/BtnBeforeClick2"
                        android:text="@string/g"
                        android:id="@+id/btn_g" />
                    <Button
                        style="@style/BtnBeforeClick2"
                        android:text="@string/h"
                        android:id="@+id/btn_h" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/CardViewCustom"
            android:id="@+id/cont_bidang_diagonal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">
                <TextView
                    style="@style/NormalTextBold"
                    android:text="@string/bidang_diagonal"
                    />
                <TextView
                    style="@style/TextViewBlack"
                    android:textAlignment="textStart"
                    android:text="@string/ket_bidang_diagonal"
                    />
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        style="@style/BtnBeforeClick"
                        android:text="@string/dbfh"
                        android:id="@+id/btn_dbfh"
                        />
