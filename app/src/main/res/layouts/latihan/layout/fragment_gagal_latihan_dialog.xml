<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.content.latihan.GagalLatihanDialogFragment"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    >

    <ImageView
        android:id="@+id/sad_emoji"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp" />

    <TextView
        style="@style/NormalTextBold"
        android:text="Sayang sekali!\nKamu gagal dalam latihan ini"
        android:layout_margin="10dp"
        android:textAlignment="center"/>

    <Button
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Ulangi Latihan"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:id="@+id/btn_ulangi_latihan"/>

</LinearLayout>